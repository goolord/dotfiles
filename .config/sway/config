  # gsettings set org.gnome.desktop.interface cursor-size 32
# }

# remap back button to middle mouse
set $TRACKBALL 1133:50184:Logitech_USB_Trackball
bindsym --input-device=$TRACKBALL --whole-window BTN_SIDE seat seat0 cursor press BTN_MIDDLE; seat seat0 cursor release BTN_MIDDLE
